<%- include("../templates/encabezado.ejs")%>
<%- include("../templates/menu.ejs")%>

<div class="container mt-5">
    <form action="/editarProducto" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Modificar Producto</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= produc.id %>">
                <input class="form-control mt-3" type="text" name="nombre" id="nombre" placeholder="Nombre" value="<%= produc.nombre %>" autofocus>
                <input class="form-control mt-3" type="text" name="categoria" id="categoria" placeholder="Categoria" value="<%= produc.categoria %>">
                <input class="form-control mt-3" type="text" name="precio" id="precio" placeholder="Precio" value="<%= produc.precio %>">
                <input class="form-control mb-3" type="file" name="foto" id="foto">
                <img src="/images/<%= produc.foto %>" width="100px" alt="Foto Actual">
            </div>
            <div class="card-footer">
                <button class="form-control btn-primary">Guardar Cambios</button>
            </div>
        </div>
    </form>
</div>

