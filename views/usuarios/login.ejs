<div class="container mt-5">
    <form action="/login" method="post">
        <div class="card">
            <div class="card-header">
                <h1>Iniciar Sesión</h1>
            </div>
            <div class="card-body">
                <input class="form-control mt-3" type="text" name="usuario" id="usuario" placeholder="Usuario" required autofocus>
                <input class="form-control mt-3" type="password" name="password" id="password" placeholder="Contraseña" required>
                <div class="mt-3">
                    <a href="/nuevoUsuario1">¿No tienes una cuenta? Regístrate aquí</a>
                </div>
            </div>
            <div class="card-footer">
                <button class="form-control btn-primary" type="submit" value="Iniciar" name="iniciar">Iniciar Sesión</button>
            </div>
        </div>
    </form>
</div>




